# ~/.aliases

if [[ "$TERM" == *"color"* ]]; then       # If colors are "supported" then...
  alias ls="ls --color=auto"              # Colorize ls command.
  alias grep="grep --color=auto"          # Colorize grep command.
  if (which tree &>/dev/null); then       # Colorize tree command.
    alias tree="tree -C"
  fi
  if (which colordiff &>/dev/null); then  # Use colorsiff instead of diff.
    alias diff="colordiff"
  fi
  if (which htop &>/dev/null); then       # Use htop instead of top.
    alias top="htop"
  fi
fi

alias mkdir="mkdir -pv"                   # Create parent directories if they don't exist. Print a message for each created directory.
alias cp="cp -ur"                         # Copy only when the source file is newer or missing. Copy directories recursivley.
alias ping="ping -c 5"                    # Stop ping after 5 echo_request packets.

alias ll="ls -l"                          # List files in long format.
alias la="ls -laF"                        # List files in long format, include dot ('.') directories and display prefix.
alias c="clear -x"                        # Clear the terminal, but do not attempt to clear the terminalÂ´s scrollback buffer.

alias ..="cd .."                          # Fast cd.
alias ...="cd ../.."
alias ....="cd ../../.."

if (which git &>/dev/null); then          # Show git working tree status.
  alias s="git status"
fi
