# ~/.aliases

if [[ "$TERM" == "xterm"*||"vte"* ]]; then  # If colors are "supported" then...
  alias ls='ls --color'                      # Colorize ls command. Colors are based on $LS_COLORS from bash_profile.
  alias grep='grep --color'                  # Colorize grep command.
  if (which tree &>/dev/null); then          # Colorize tree command.
    alias tree='tree -C'
  fi
fi 

alias ll='ls -l'                            # List files in long format.
alias la='ls -laF'                          # List files in long format, include dot ('.') directories and display prefix.
alias c='clear'                             # Clear the terminal.
alias mkdir='mkdir -p'                      # Create parent directories if they don't exist.

if (which git &>/dev/null); then
  alias s='git status'                      # Show the working tree status.
fi
